#Persistent 
#NoEnv
#SingleInstance Force
SetWorkingDir %A_ScriptDir%
detectHiddenWindows on

OnMessage(0x4002, "reloadFunction")
OnMessage(0x4001, "exitFunction")

IfNotExist, %A_ScriptDir%\config.ini    
{
default:
PlayPauseEnable := 1
NextEnable := 1
PreviousEnable := 1
DarkTheme := 0

gosub inwritefile
sleep 500
}

gosub inireadfile

;---------------------------------------------------------
Menu, Tray, Add, Previous Track, PreviousTrack
