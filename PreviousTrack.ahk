Gui Add, GroupBox, x8 y5 w129 h110, Buttons Enable/Disable
Gui Add, CheckBox, x16 y16 w120 h23 vPlayPauseEnable, Play/Pause
Gui Add, CheckBox, x16 y40 w120 h23 vNextEnable, Next
Gui Add, CheckBox, x16 y64 w120 h23 vPreviousEnable, Previous
Gui Add, CheckBox, x16 y88 w120 h23 vDarkTheme, DarkTheme

Gui Add, Button, x8 y120 w43 h23 gOkButton, &OK
Gui Add, Button, x56 y120 w80 h23 gCancelButton, &Cancel

if (DarkTheme == 0){
PNG16x16 := ""
hICON := Base64PNG_to_HICON( PNG16x16 )  ; Create a HICON for Tray
}
if (DarkTheme == 1){
PNG16x16 := ""
hICON := Base64PNG_to_HICON( PNG16x16 )  ; Create a HICON for Tray
}


Menu, Tray, Icon, HICON:*%hICON%                      ; AHK makes a copy of HICON when * is used
Menu, Tray, Icon
DllCall( "DestroyIcon", "Ptr",hICON  )

if (PlayPauseEnable = 0){
	Process, Exist, PlayPause.exe ; check to see if AutoHotkey.exe is running
		If errorLevel
			{
			SendMessage, 0x4001,0,,, ahk_exe PlayPause.exe  ;exit
			}
}
if (NextEnable = 0){
	Process, Exist, NextTrack.exe ; check to see if AutoHotkey.exe is running
		If errorLevel
			{
			SendMessage, 0x4001,0,,, ahk_exe NextTrack.exe  ;exit 
			}
}

if (PlayPauseEnable = 1){
	Process, Exist, PlayPause.exe ; check to see if AutoHotkey.exe is running
		If ! errorLevel
			{
			IfExist, %A_ScriptDir%\PlayPause.exe
                {
				Run, %A_ScriptDir%\PlayPause.exe
                }
			}
}
if (NextEnable = 1){
	Process, Exist, NextTrack.exe ; check to see if AutoHotkey.exe is running
		If ! errorLevel
			{
			IfExist, %A_ScriptDir%\NextTrack.exe
                {
				Run, %A_ScriptDir%\NextTrack.exe
                }
			}
}
if (PreviousEnable = 0){
	Process, Exist, PreviousTrack.exe ; check to see if AutoHotkey.exe is running
		If errorLevel
			{
			SendMessage, 0x4001,0,,, ahk_exe PreviousTrack.exe  ;exit 
			}
}
return

;---------------------------------------------------------
PreviousTrack:
send {Media_Prev}
return
;++++++++++++++++++++++++++++++++++++++++++++++++++++++++

options:
gosub inireadfile
GuiControl, ,PlayPauseEnable, %PlayPauseEnable%
GuiControl, ,NextEnable, %NextEnable%
GuiControl, ,PreviousEnable, %PreviousEnable%
GuiControl, ,DarkTheme, %DarkTheme%

Gui Show, w147 h150, Window
Return
 

OkButton:
Gui, Submit ;, NoHide
gosub inwritefile
IfExist, %A_ScriptDir%\node_tray_music.exe
    {
	Run, %A_ScriptDir%\node_tray_music.exe
    }
return

CancelButton:
Gui, Hide
return

inireadfile:
IniRead, PlayPauseEnable, %A_ScriptDir%\config.ini, keys, PlayPauseEnable
IniRead, NextEnable, %A_ScriptDir%\config.ini, keys, NextEnable
IniRead, PreviousEnable, %A_ScriptDir%\config.ini, keys, PreviousEnable
IniRead, DarkTheme, %A_ScriptDir%\config.ini, keys, DarkTheme
return

inwritefile:
IniWrite, %PlayPauseEnable%, %A_ScriptDir%\config.ini, keys, PlayPauseEnable
IniWrite, %NextEnable%, %A_ScriptDir%\config.ini, keys, NextEnable
IniWrite, %PreviousEnable%, %A_ScriptDir%\config.ini, keys, PreviousEnable
IniWrite, %DarkTheme%, %A_ScriptDir%\config.ini, keys, DarkTheme
return

exitApp:

Process, Exist, PlayPause.exe ; check to see if AutoHotkey.exe is running
If errorLevel
{
	SendMessage, 0x4001,0,,, ahk_exe PlayPause.exe  ;exit
}

Process, Exist, NextTrack.exe ; check to see if AutoHotkey.exe is running
If errorLevel
{
	SendMessage, 0x4001,0,,, ahk_exe NextTrack.exe  ;exit 
}
exitapp

